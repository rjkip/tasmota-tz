{
  "name": "tasmota-tz",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "node fix-tubular.js && vite dev",
    "build": "node fix-tubular.js && vite build && mkdir .netlify/edge-functions && cp src/edgeBlock.ts .netlify/edge-functions/block.ts",
    "preview": "node fix-tubular.js && vite preview",
    "test": "npm run test:integration && npm run test:unit",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test:integration": "playwright test",
    "test:unit": "vitest --run",
    "lint": "prettier --plugin-search-dir . --check .",
    "format": "prettier --plugin-search-dir . --write ."
  },
  "devDependencies": {
    "@netlify/edge-functions": "^2.11.0",
    "@playwright/test": "^1.28.1",
    "@sveltejs/adapter-netlify": "^5.1.0",
    "@sveltejs/kit": "^2.26.1",
    "@sveltejs/vite-plugin-svelte": "^6.1.0",
    "@tubular/time": "^3.8.14",
    "leaflet": "^1.9.4",
    "lodash": "^4.17.21",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "svelte": "^5.37.1",
    "svelte-check": "^4.0.0",
    "svelte-select": "^5.6.1",
    "vite": "^7.0.6",
    "vitest": "^1.0.0"
  },
  "type": "module",
  "dependencies": {
    "@wuchale/svelte": "^0.9.3",
    "wuchale": "^0.9.6"
  }
}
